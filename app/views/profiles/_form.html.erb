<%= form_with model: @profile do |form| %>
  <% if profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <%= form.fields_for :experiences, index: profile.id do |experiences_form| %>
      <%= experiences_form.label "Nome da Empresa", style: "display: block" %>
      <%= experiences_form.text_field :name %>

      <%= experiences_form.label "Data de Inicio", style: "display: block" %>
      <%= experiences_form.text_field :date_start %>

      <%= experiences_form.label "Data Final", style: "display: block" %>
      <%= experiences_form.text_field :date_final %>

      <%= experiences_form.label "Descrição", style: "display: block" %>
      <%= experiences_form.text_field :description %>

  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
